<?xml version="1.0" encoding="UTF-8"?>

<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:exsl="http://exslt.org/common" 
  xmlns="http://www.w3.org/1999/xhtml" version="1.0">

  <!-- Force english -->
  <xsl:param name="profile.lang" select="'en'"/>

  <!-- Control the font size -->
  <xsl:param name="ada.exam.fontsize" select="'10pt'"/>

  <!-- Show the qandadiv ID -->
  <xsl:param name="ada.exam.include.id" select="'yes'"/>

  <!-- Show the qandadiv ID -->
  <xsl:param name="ada.exam.render.separate.cover" select="'yes'"/>

  <!-- Author/s of the exam -->
  <xsl:param name="ada.exam.author">Author that created the exam</xsl:param>

  <!-- Logo to use in the upper left corner -->
  <xsl:param name="ada.exam.topleft.image">Logo.png</xsl:param>
  <xsl:param name="ada.exam.topleft.image.alt">ada.exam.topleft.image.alt</xsl:param>

  <!-- Text to include in the top left (next to icon) -->
  <xsl:param name="ada.exam.topleft.toptext">ada.exam.topleft.toptext</xsl:param>
  <xsl:param name="ada.exam.topleft.toptext.en">ada.exam.topleft.toptext.en</xsl:param>

  <!-- Text to include in the center left (next to icon) -->
  <xsl:param name="ada.exam.topleft.centertext">ada.exam.topleft.centertext</xsl:param>
  <xsl:param name="ada.exam.topleft.centertext.en">ada.exam.topleft.centertext.en</xsl:param>

  <!-- Text to include in the bottom left (next to icon) -->
  <xsl:param name="ada.exam.topleft.bottomtext">ada.exam.topleft.bottomtext</xsl:param>
  <xsl:param name="ada.exam.topleft.bottomtext.en">ada.exam.topleft.bottomtext.en</xsl:param>

  <!-- Text to include in the top right (next to icon) -->
  <xsl:param name="ada.exam.topright.toptext">ada.exam.topright.toptext</xsl:param>
  <xsl:param name="ada.exam.topright.toptext.en">ada.exam.topright.toptext.en</xsl:param>

  <!-- Text to include in the center right (next to icon) -->
  <xsl:param name="ada.exam.topright.centertext">ada.exam.topright.centertext</xsl:param>
  <xsl:param name="ada.exam.topright.centertext.en">ada.exam.topright.centertext.en</xsl:param>

  <!-- Text to include in the bottom right (next to icon) -->
  <xsl:param name="ada.exam.topright.bottomtext">ada.exam.topright.bottomtext</xsl:param>
  <xsl:param name="ada.exam.topright.bottomtext.en">ada.exam.topright.bottomtext.en</xsl:param>

  <!-- Label to precede each exercise in a regular exam. The default is
       "problem" or "problema" -->
  <xsl:param name="ada.exam.exercise.name">ada.exam.exercise.name (por defecto Problema)</xsl:param>
  <xsl:param name="ada.exam.exercise.name.en">ada.exam.exercise.name.en (default
  Problem)</xsl:param>
</xsl:stylesheet>
