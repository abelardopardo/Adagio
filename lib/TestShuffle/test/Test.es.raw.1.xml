28</programlisting>
              </entry>
              <entry align="left">
                <programlisting format="linespecific">#include &lt;stdio.h&gt; 
#include &lt;stdlib.h&gt; 
#include &lt;unistd.h&gt; 
#include &lt;sys/wait.h&gt;

int main(int argc, char **argv) { 
    int fd[2]; 
    pid_t pid; 
    int status; 
    int secret = 0;
    if(pipe(fd) == 0) { 
	pid = fork(); 
	if(pid == 0) { 
            secret = -1; 
            close(fd[1]); 
            read(fd[0], (void *)&amp;secret, sizeof(int)); 
            close(fd[0]); 
            printf("[%d]: %d\n", getpid(), secret); 
	} else { 
            close(fd[0]); 
            write(fd[1], (const void *)&amp;secret, sizeof(int));
            wait(&amp;status); 
            printf("[%d]: %d\n", getpid(), secret); 
            close(fd[1]); 
	} 
    } 
    return 0; 
}</programlisting>
              </entry>
